.container
  = custom_devise_error_messages!
  .card
    %h3 Cambiar contraseña
    = form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :patch }) do |f|
      .form-group.required
        = f.password_field :current_password, required: true, autocomplete: 'off', placeholder: 'Contraseña actual', class: 'form-control'
      .form-group
        = f.password_field :password, required: true, autocomplete: 'off', placeholder: 'Nueva contraseña', class: 'form-control'
      .form-group
        = f.password_field :password_confirmation, required: true, autocomplete: 'off', placeholder: 'Confirmar nueva contraseña', class: 'form-control'
      .form-group
        = f.submit 'Cambiar contraseña', class: 'btn btn-primary'
